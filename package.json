{
  "name": "todos",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "db:generate": "npx drizzle-kit generate",
    "db:migrate": "tsx src/drizzle/migrate.ts",
    "db:seed": "tsx src/drizzle/seed.ts",
    "dev": "pnpm run db:seed; next dev --turbo",
    "build": "next build",
    "lint": "next lint",
    "start": "next start",
    "test": "pnpm run test:unit",
    "test:integration": "vitest --config ./test/integration/vitest.config.mts run",
    "test:unit": "vitest --config ./test/unit/vitest.config.mts run",
    "test:unit:watch": "vitest --config ./test/unit/vitest.config.mts watch",
    "typescript:check": "npx tsc --noEmit"
  },
  "dependencies": {
    "drizzle-orm": "^0.33.0",
    "next": "14.2.13",
    "postgres": "^3.4.4",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.0.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react": "^4.3.1",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.24.2",
    "eslint": "^8",
    "eslint-config-next": "14.2.13",
    "jsdom": "^25.0.1",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.19.1",
    "typescript": "^5",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.1"
  }
}
